<Window x:Class="StartMenuProtector.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:StartMenuProtector.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TabControl FontSize="20" HorizontalAlignment="Stretch">
            <TabItem Header="Active" >
                <view:StartMenuView x:Name="ActiveProgramShortcutsView">
                </view:StartMenuView>
            </TabItem>
            <TabItem Header="Saved" >
                <view:StartMenuView x:Name="SavedProgramShortcutsView">
                </view:StartMenuView>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
